<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/listingFragment">

    <fragment
        android:id="@+id/listingFragment"
        android:name="com.enesigneci.basket.ui.listing.ListingFragment"
        android:label="listing_fragment"
        tools:layout="@layout/listing_fragment" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.enesigneci.basket.ui.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <action
        android:id="@+id/action_global_cartFragment"
        app:destination="@id/cartFragment" />

    <action
        android:id="@+id/action_global_listingFragment"
        app:destination="@id/listingFragment" />
</navigation>